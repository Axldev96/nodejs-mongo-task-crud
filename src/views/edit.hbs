<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p4 text-white rounded-0">
        <h1 class="text-center mb-2">Update a Task</h1>
        <form action="/edit/{{task._id}}" method="POST">
          <input class="form-control rounded-0 bg-dark text-white mb-3" type="text" name="title" placeholder="Title" value="{{task.title}}">
          <textarea class="form-control rounded-0 bg-dark text-white mb-3" name="description" rows="3" placeholder="Add a description">{{task.description}}</textarea>
          <button class="btn btn-primary">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>
